{{>nav}}
{{#if successMsg}}
<script>
    alert(successMsg)
</script>
{{/if}}
<div class="container">
    <div class="row">
       <h3 class="text-center mt-2">All Product</h3>
        {{#each data}}
        <div class="col-md-3 mt-3 mb-3">
            <div class="card">
                <img src={{image}} class="card-img-top p-2" alt="...">
                <div class="card-body">
                    <h6 class="card-title">{{name}}</h6>
                    <div class="row mt-2" style="">
                        <div class="col-6">
                            <a href=/addtocart/{{_id}} class="btn btn-dark">&nbsp;Add To Cart&nbsp;</a>
                        </div>
                        <div class="col-6">
                            <span class="text-success h4 float-end">&#8377;{{price}}</span>

                        </div>
                    </div>
                </div>

            </div>
        </div>
        {{/each}}
    </div>
</div>

{{>footer}}